@model Category

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Kategori Oluştur</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span> @*//Hatalı eksik bir şeyler girdin uyarısı*@
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control"/>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Oluştur</button>
        <a asp-controller="Category" asp-action=Index class="btn btn-secondary" style"width:150px">
          Listeye Geri Dön
          </a>
    </div>
</form>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />
}
}
